                <div class="message mb-4">
                    {{#if isOk}}
                        <p class="success">{{message}}</p>
                    {{else}}
                        <p class="error">{{message}}</p>
                    {{/if}}
                </div>


                <div style="max-width: 350px;text-align: center;margin: auto;background-color: red; border-radius:5px;padding: 0px 10px">
                    <p style="color: #fff;">
                        <strong>SOLO SUBIR ARCHIVOS CON MENOS DE 80K Y MENOR A 1MB</strong>
                    </p>
                </div>

                <div id="kbbutton">
                    <button type="submit" class="btn btn-primary mb-2">Ingresar Numeros</button>
                </div>

                <div id="kbloading" style="display: none">
                    <div>
                        <div class="lds-facebook"><div></div><div></div><div></div></div>
                    </div>
                    Cargando Numeros...
                </div>
            </form>

            

        </div>


