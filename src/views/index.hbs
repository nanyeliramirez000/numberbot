            kbForm.addEventListener("submit", function(e) {
                var form = e.target;
                document.getElementById("kbloading").style.display = "block";
                document.getElementById("kbbutton").style.display = "none";
                {{!-- document.getElementById("upfile").setAttribute('disabled', 'disabled'); --}}
            });

